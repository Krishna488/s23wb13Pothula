extends layout

block content
  h1= title
  p Welcome back to #{title} modifed by Krishna Narendra Kumar Pothula

  - results = [{ Jug: "Kameneni", size: "large", cost: 30 },{ Jug: "Denton", size: "med", cost: 20 },{ Jug: "ruden", size: "small", cost: 10 }];
  div.container-fluid 
    -
    div.row 
    -
    each item, index in results
        div.col-sm-6
            h2= item.Jug
            p= item.Jug_size 
            p= "cost: $"+item.cost.toFixed(2)
            div.row
                each prop, i in Object.keys(item)
                    div(col-sm-2,  onclick=`buy(${index})`)
                        p #{Object.keys(item)[i]}: #{item[prop]}

        
    script.
        function buy (index){
            alert (`You purchased item ${index+1}`)    
        }